{
    "name": "Mask R-CNN Development Container",
    "dockerFile": "Dockerfile",
    "context": "..",  // Set the build context to the parent directory
    "workspaceFolder": "/app",
    "mounts": [
        "source=dissertation_shared_data,target=/app/data,type=volume"
    ],
    "settings": {
        "python.pythonPath": "/usr/local/bin/python"
    },
    "extensions": [
        "ms-python.python"
    ],
    "postCreateCommand": "pip install -r requirements.txt"  // Optional: If you have a requirements file
}
